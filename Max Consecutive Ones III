class Solution:
    def longestOnes(self, nums: List[int], k: int) -> int:
        l,r = 0,0
        maxCount  = 0
        while r < len(nums):
            if nums[r] == 1 or k >= 0:
                if nums[r]==0:
                    k-=1
                r +=1
             
            if k < 0:
             
                if nums[l]==0:
                    k+=1
                l+=1
            maxCount = max(maxCount,r-l)
        return maxCount
